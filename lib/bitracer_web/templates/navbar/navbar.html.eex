<div>
      <%= if logged_in?(@conn) do %>
        <li><%= current_user(@conn).username %></li>
        <li><%= link "Logout", to: session_path(@conn, :delete), method: :delete %></li>
      <% else %>
        <span>About Us</span>
        <span>Game Rules</span>
        <span class="login"><%= link "Login",    to: "/login" %></span>
        <span class="login"><%= link "Register", to: user_path(@conn, :new) %></span>
      <% end %>


</div>